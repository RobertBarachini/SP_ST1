extends layout

block bootStyle
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    link(href='../../bootstrap.min.css', rel='stylesheet')

block content
    main(role="main")
      header.py-5.bg-light
        .container
          .row
            .col-md-3
              -url = user.profilePicture
              img.rounded-circle.profile-img(src=url)
            .col-md-9
              section
                div
                  .mb-3
                    h5.profile-h5=user.username
                    -povezava = '/users/'+ uporabnik._id + '/editProfile'
                    a(href=povezava)
                      button.btn.btn-outline-dark.my-2.my-sm-0(type="button") Edit profile
                    a(href="/users/logout")
                      button.btn.btn-outline-dark.my-2.my-sm-0(type="button") Sign out
                      br
                  ul.list-inline
                    li.list-inline-item
                      b=user.posts.length 
                      | posts
                    li.list-inline-item
                      b 123 
                      | followers
                    li.list-inline-item
                      b 123 
                      | following
                  h6= user.name + ' ' +user.surname
                  ul(style="padding-left:15px")
                    li priden
                    li poÅ¡ten
                    li delaven
                  a(href="")
                    | www.#{user.username}.si
                    a
      nav
        ul.nav.nav-pills.justify-content-center.py-5.bg-light
          li.nav-item
            a.nav-link.active(href="#") Posts
          li.nav-item
            a.nav-link(href="#") Tagged
          li.nav-item
            a.nav-link(href="#") Saved
          li.nav-item
            a.nav-link.disabled(href="#") Disabled
      div(class='album py-5 bg-light')
        div(class='container')
          if posts != undefined && posts.length > 0
            div(class='row')
              each post in posts
                div(class='col-md-4')
                  div(class='card mb-4 shadow-sm')
                    -povezava = '/posts/' + post._id
                    a(href=povezava)
                      img(class='card-img-top', src='../../resources/A_01.jpg', alt='Card image cap')
                    div(class='card-body')
                      a(href='' class='card-user')
                        h5 #test
                      p(class='card-text')
                        | #{post.description}
                      p(class='crd-text')
                        a(href='' class='a-hashtag')
                          b #blessed
                        a(href='' class='a-hashtag')
                          b #travel
                      div(class='d-flex justify-content-between align-items-center')
                        div(class='btn-group')
                          div(class='btn-circle btn-circle-default')
                          div(class='btn-circle btn-circle-default')
                        small(class='text-muted')
                          | #{post.likes}



