extends layout

block bootStyle
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    link(href='../../bootstrap.min.css', rel='stylesheet')

block content
    main(role="main")
      header.py-5.bg-light
        .container
          .row
            .col-md-3
              -url = user.profilePicture
              img.rounded-circle.profile-img(src=url)
            .col-md-9
              section
                div
                  .mb-3
                    h5.profile-h5=user.username
                    a(href="/users/userID/editProfile")
                      button.btn.btn-outline-dark.my-2.my-sm-0(type="button") Edit profile
                    a(href="/users/logout")
                      button.btn.btn-outline-dark.my-2.my-sm-0(type="button") Sign out
                      br
                  ul.list-inline
                    li.list-inline-item
                      b=user.posts.length 
                      | posts
                    li.list-inline-item
                      b 123 
                      | followers
                    li.list-inline-item
                      b 123 
                      | following
                  h6= user.name + ' ' +user.surname
                  ul(style="padding-left:15px")
                    li priden
                    li po≈°ten
                    li delaven
                  a(href="")
                    | www.#{user.username}.si
                    a
      nav
        ul.nav.nav-pills.justify-content-center.py-5.bg-light
          li.nav-item
            a.nav-link.active(href="#") Posts
          li.nav-item
            a.nav-link(href="#") Tagged
          li.nav-item
            a.nav-link(href="#") Saved
          li.nav-item
            a.nav-link.disabled(href="#") Disabled
      .album.py-5.bg-light
        .container
          .row
            .col-md-4
              .card.mb-4.shadow-sm
                a(href="/posts/postID")
                  img.card-img-top(src="../../resources/A_01.jpg" alt="Card image cap")
                .card-body
                  a.card-user(href="")
                    h5 @wanderlust
                  p.card-text I love exploring - taking photos is my life.
                  p.card-text
                    a.a-hashtag(href="")
                      b #blessed
                    a.a-hashtag(href="")
                      b #travel
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      .btn-circle.btn-circle-success
                      .btn-circle.btn-circle-default
                    small.text-muted 5.1 k



