extends layout

block bootStyle
    link(href='../../bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='../../stylesheets/styles.css')

block content
    main(role='main')
        div(class='album py-5 bg-light')
            div(class='container', style='height:666px')
                div(class='row')
                    section(class='jumbotron container text-center')
                        form(method='POST' action='/login')
                            div(class='container')
                                img(src='../../resources/app-icon2.png', style='height: 40px; margin-right: 5px')
                                h1(class='jumbotron-heading')
                                    | Log in to Aggregate.io
                                p
                                   input(id='username', class='form-control mr-sm-2', type='text', placeholder='Username')
                                   input(id='password', class='form-control mr-sm-2', type='password', placeholder='Password')
                                   a(id='gumb', onclick='preveri()', class='btn btn-primary my-2')
                                    | Log in
                                   script(type="text/javascript" src="../../preveri_vnos/loginPreveri.js")
                                a(href='#' class='btn')
                                    | Forgot password?
                            
                    section(class='jumbotron container text-center', style='border: 1px')
                        p(style='font-size: 25px')
                         | New to Aggregate.io?
                         a(href='/register')  Create an account
                        
block endSkripti
    script(src='../../scripts.js')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')