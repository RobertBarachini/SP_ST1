extends layout

block content
    main(role='main')
        div(class='album py-5 bg-light')
            div(class='container')
                div(class='row')
                    section(class='jumbotron container text-left')
                        div(class='container')
                            h1(class='jumbotron-heading')
                                | Create a new account
                            p
                                a Username
                                input(class='form-control mr-sm-2', type='text', required)
                                a Email address
                                input(class='form-control mr-sm-2', type='email', required)
                                a Password
                                input(class='form-control mr-sm-2', type='password', required)
                                a Confirm Password
                                input(class='form-control mr-sm-2', type='password', required)
                                a(href='/login', class='btn btn-primary my-2')
                                    | Create new account
                                
                    section(class='jumbotron container text-center', style='border: 1px')
                        p(style='font-size: 25px')
                         a(href='/login')  Log into existing account
                            
                            
