extends layout

block bootStyle
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    link(href='../../bootstrap.min.css', rel='stylesheet')
    
block content
    main(role='main')
        div(class='album py-5 bg-light')
            div(class='container')
                div(class='row')
                    section(class='jumbotron container text-left')
                        div(class='container')
                            h1(class='jumbotron-heading')
                                | Share your story
                            p   
                                form(method='POST' action='/users/userID/addText')
                                    a Naslov:
                                    label(for="naslov").col-md-3.control-label
                                    input#naslov.form-control(type="naslov", placeholder="Naslov", name="naslov")
                                    div(class='form-group')
                                        label(for='textarea')
                                            | Text
                                        textarea(class='form-control', id='exampleFormControlTextarea1', rows='5', name = 'textarea')
                                    a Tags
                                    labels(for ='tags')
                                    input(class='form-control mr-sm-2', type='text', placeholder = '#ravnica', name = 'tags')
                                    button.btn.btn-primary(id='gumb', type='submit')
                                        | Share story
                    
