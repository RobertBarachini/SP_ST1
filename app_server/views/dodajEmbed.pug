extends layout

block bootStyle
    link(href='../../bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    
block content
    main(role='main')
        div(class='album py-5 bg-light')
            div(class='container')
                div(class='row')
                    section(class='jumbotron container text-left')
                        div(class='container')
                            h1(class='jumbotron-heading')
                                | Post your Embed
                            b &nbsp;
                            p
                                a Post your URL
                                form(class = 'inline')
                                    input(id='wbL', class='form-control mr-sm-2', type='text', placeholder = 'http://www.youtube.com', required)
                                div(class='form-group')
                                    label(for='exampleFormControlTextarea1')
                                        | Description
                                    textarea(class='form-control', id='exampleFormControlTextarea1', rows='5')
                                a Tags
                                input(id='tagi', class='form-control mr-sm-2', type='text', placeholder = '#ravnica')
                                a(id='gumb', onclick='preveri()', class='btn btn-primary my-2')
                                    | Share embed
                                script(type='text/javascript', src='../../preveri_vnos/dodajEmbedPreveri.js')
                    
block endSkripti
