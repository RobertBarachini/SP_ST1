extends layout

block bootStyle
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    link(href='../../bootstrap.min.css', rel='stylesheet')
    
block content
    main(role='main')
        div(class='album py-5 bg-light')
            div(class='container')
                div(class='row')
                    section(class='jumbotron container text-left')
                        div(class='container')
                            h1(class='jumbotron-heading')
                                | Edit your picture
                            b &nbsp;
                            p
                                div(style='position:relative;')
                                    img(class='card-img-top', src='../../resources/A_01.jpg', alt='Card image cap')
                                div
                                    b &nbsp;
                                div(class='form-group')
                                    label(for='exampleFormControlTextarea1')
                                        | Description
                                    textarea(class='form-control', id='exampleFormControlTextarea1', rows='5')
                                        | I love exploring - taking photos is my life..
                                a Tags
                                input(id='tagi', class='form-control mr-sm-2', type='text', placeholder = '#blessed #travel')
                                a(id='gumb', onclick='preveri()', class='btn btn-primary my-2')
                                    | Save
                                script(type="text/javascript" src="../../preveri_vnos/editSlikoPreveri.js")
                                    
block endSkripti
