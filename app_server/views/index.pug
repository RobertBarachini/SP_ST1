extends layout

block bootStyle
    link(href='../../bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    

block content
  if uporabnik
  .container.fixed-bottom.text-center
    .dropup
      button.btn-lg.dropdown(type="button" data-toggle="dropdown" style="border-radius: 50%; background-color: #7800ff")
        | +
        span.caret
      ul.dropdown-menu.dropdown-menu-back.text-center
        li
          a(href="/users/userID/addPicture") Add Picture
        li.divider
        li
          a(href="/users/userID/addEmbed") Add Embed
        li.divider
        li
          a(href="/users/userID/addText") Add Text
  
  main(role='main')
  
    section(class='jumbotron text-center')
      div(class='container')
        h1(class='jumbotron-heading')
          | Consent
        p(class='lead text-muted')
          | This site uses cookies. To get the full experience you need to sign a deal with the devil. All your data belongs to us.
        p
          a(href='#', class='btn btn-primary my-2')
            | Accept
          a(href='#', class='btn btn-secondary my-2')
            | Reject
            
    div(class='album py-5 bg-light')
      div(class='container')
        div(class='row')
          each post in posts
            div(class='col-md-4')
              div(class='card mb-4 shadow-sm')
                -povezava = '/posts/' + post._id
                a(href=povezava)
                  img(class='card-img-top', src='../../resources/A_01.jpg', alt='Card image cap')
                div(class='card-body')
                  a(href='' class='card-user')
                    h5 #test
                  p(class='card-text')
                    | #{post.description}
                  p(class='crd-text')
                    a(href='' class='a-hashtag')
                      b #blessed
                    a(href='' class='a-hashtag')
                      b #travel
                  div(class='d-flex justify-content-between align-items-center')
                    div(class='btn-group')
                      div(class='btn-circle btn-circle-default')
                      div(class='btn-circle btn-circle-default')
                    small(class='text-muted')
                      | 5.1 k
        
    
