extends layout

block bootStyle
    link(rel='stylesheet', href='../../stylesheets/styles.css')
    link(href='../../bootstrap.min.css', rel='stylesheet')
    
block content
    main(role="main")
      .album.py-5.bg-light
        .container
          h1 Edit Profile
          hr
          .row
            // left column
            .col-md-3
              .text-center
                img.rounded-circle.profile-img(src="../../resources/garavi-sokak.jpg" alt="Card image cap")
                h6 Upload a different photo...
                div(style="position:relative;")
                  a.btn.btn-primary(href="javascript:;")
                    | Choose File
                    input(type="file" style='position:absolute;z-index:2;top:0;left:0;filter: alpha(opacity=0);-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";opacity:0;background-color:transparent;color:transparent;' name="file_source" size="40" onchange='$("#upload-file-info").html($(this).val());')
                  span#upload-file-info.label.label-info
            // edit form column
            .col-md-9.personal-info
              .alert.alert-info.alert-dismissable
                a.panel-close.close(data-dismiss="alert") ×
                i.fa.fa-coffee
                |                   This is an 
                strong .alert
                | . Use this to show important messages to the user.
              h3 Personal info
              
              form(method='POST' action='/users/userID/editProfile')
                .form-group
                  label(for="name").col-lg-3.control-label Name:
                  .col-lg-8
                    input#name.form-control(type="text", placeholder="Bane Krstič", name="name")
                .form-group
                  label(for="username").col-lg-3.control-label Username:
                  .col-lg-8
                    input#username.form-control(type="text", placeholder="BaneK", name="username")
                .form-group
                  label(for="website").col-lg-3.control-label Website:
                  .col-lg-8
                    input#website.form-control(type="text", placeholder="www.BaneKrstič.si", name="website")
                .form-group
                  label.col-lg-3.control-label(for="textArea") Bio
                  .col-lg-8
                    textarea#bio.form-control(form="usrform" rows="3" placeholder="priden\
                    pošten\
                    delaven")
                .form-group
                  label(for="email").col-lg-3.control-label Email:
                  .col-lg-8
                    input#email.form-control(type="email", placeholder="banekrstic@gmail.com", name="email")
                .form-group
                  label.col-lg-3.control-label Time Zone:
                  .col-lg-8
                    .ui-select
                      select#user_time_zone.form-control
                        mixin v(zone, time)
                          option(value=zone)&attributes(attributes)= time
                        ul
                          +v('Hawaii','(GMT-10:00) Hawaii')
                          +v('Alaska','(GMT-09:00) Alaska')
                          +v('Pacific Time (US & Canada)','(GMT-08:00) Pacific Time (US & Canada)')
                          +v('Arizona','(GMT-07:00) Arizona')
                          +v('Mountain Time (US & Canada)','(GMT-07:00) Mountain Time (US & Canada)')
                          +v('Central Time (US & Canada)','(GMT-06:00) Central Time (US & Canada)')
                          +v('Eastern Time (US & Canada)','(GMT-05:00) Eastern Time (US & Canada)')
                          +v('Indiana (East)','(GMT-05:00) Indiana (East)')
                .form-group
                  label(for="password").col-md-3.control-label Password:
                  .col-md-8
                    input#password.form-control(type="password", placeholder="password", name="password")
                .form-group
                  label(for="password2").col-md-3.control-label Confirm password:
                  .col-md-8
                    input#password2.form-control(type="password", placeholder="password", name="password2")
                .form-group
                  label.col-md-3.control-label
                  .col-md-8
                    a
                      button.btn.btn-primary(type='submit')
                        | Save Changes
                      //-input(type='button', class='btn btn-primary', value='Save Changes')
                    span
                    input.btn.btn-default(type="reset" value="Cancel")
        hr


